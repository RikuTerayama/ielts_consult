---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
const categoryCounts = new Map();
posts.forEach(post => {
  if (post.data.category) {
    categoryCounts.set(post.data.category, (categoryCounts.get(post.data.category) || 0) + 1);
  }
});
const sortedCategories = Array.from(categoryCounts.entries()).sort((a, b) => b[1] - a[1]);
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>カテゴリ一覧 - IELTS 学習ガイド</title>
    <meta name="description" content="IELTS学習に関する記事をカテゴリ別に整理。スキル別に効率的に学習できます。" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { 
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
        line-height: 1.6; 
        color: #333; 
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
      }
      .container { 
        max-width: 1200px; 
        margin: 0 auto; 
        padding: 2rem 1rem; 
      }
      .header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 3rem 2rem;
        margin-bottom: 2rem;
        text-align: center;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      }
      .header h1 {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
      }
      .header p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 2rem;
      }
      .nav-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
      }
      .nav-link {
        background: rgba(255, 255, 255, 0.9);
        color: #667eea;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }
      .nav-link:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
      }
      .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
      }
      .category-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 2.5rem;
        text-align: center;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
      .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      }
      .category-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      .category-name {
        font-size: 1.8rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.5rem;
      }
      .category-count {
        color: #666;
        font-size: 1rem;
        margin-bottom: 1.5rem;
      }
      .category-link {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
      }
      .category-link:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
      }
      .empty-state {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      }
      .empty-state h2 {
        color: #667eea;
        margin-bottom: 1rem;
        font-size: 2rem;
      }
      .empty-state p {
        color: #666;
        font-size: 1.1rem;
        line-height: 1.6;
      }
      @media (max-width: 768px) {
        .header h1 { font-size: 2rem; }
        .nav-links { flex-direction: column; align-items: center; }
        .categories-grid { grid-template-columns: 1fr; }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h1>📁 カテゴリ一覧</h1>
        <p>スキル別に記事を整理して効率的に学習</p>
        <div class="nav-links">
          <a href="/" class="nav-link">← ホーム</a>
          <a href="/tags/" class="nav-link">タグ一覧</a>
        </div>
      </header>

      {sortedCategories.length === 0 ? (
        <div class="empty-state">
          <h2>📝 カテゴリを準備中</h2>
          <p>
            現在、カテゴリを準備しています。<br>
            まもなく充実したコンテンツをお届けします。
          </p>
        </div>
      ) : (
        <div class="categories-grid">
          {sortedCategories.map(([category, count]) => (
            <div class="category-card">
              <div class="category-icon">
                {category === 'Writing' ? '✍️' : 
                 category === 'Speaking' ? '🗣️' : 
                 category === 'Reading' ? '📖' : 
                 category === 'Listening' ? '🎧' : '📚'}
              </div>
              <div class="category-name">{category}</div>
              <div class="category-count">{count} 記事</div>
              <a href={`/categories/${encodeURIComponent(category)}/`} class="category-link">
                記事を見る
              </a>
            </div>
          ))}
        </div>
      )}
    </div>
  </body>
</html>
