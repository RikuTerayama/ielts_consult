---
interface Props {
  slot?: string; // data-ad-slot
  style?: string;
}
const client = import.meta.env.PUBLIC_ADSENSE_CLIENT;
const { slot, style = "display:block; text-align:center; margin:16px 0;" } = Astro.props as Props;
---
{client && slot && (
  <>
    <ins class="adsbygoogle"
      style={style}
      data-ad-client={client}
      data-ad-slot={slot}
      data-ad-format="auto"
      data-full-width-responsive="true"></ins>
    <script is:inline>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </>
)}
